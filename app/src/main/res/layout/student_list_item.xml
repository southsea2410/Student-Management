<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/baseline_accessible_forward_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/templateName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Victoria nego"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/templateClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21KTPM1"
            android:textColor="#ACACAC"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/templateGenderDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24/10/2003 - Male"
            android:textColor="#ACACAC"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>